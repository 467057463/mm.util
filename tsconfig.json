{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es5",
      "es6"
    ],
    "target": "es5",
    "outDir": "build",
    "sourceMap": true,
    "declaration": true /* Generates corresponding '.d.ts' file. */,
    "declarationDir": "./types" /* Output directory for generated declaration files. */,
    "emitDeclarationOnly": true,
  },
  "include": [
    "./src/**/*"
  ]
}